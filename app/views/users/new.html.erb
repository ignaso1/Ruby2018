<div class='container'>
	<div class='row'>
		<h2>Sign up</h2>
    <%= form_for(@user, url: signup_path, :html => {class: 'form-horizontal'}) do |f| %>
      <%= render 'shared/error_messages' %>  

      <div class='form-group'>
        <%= f.label :name, class:'col-md-4 control-label' %>
        <%= f.text_field :name, class:'col-md-4 input-md'%>
      </div>

      <div class='form-group'>
        <%= f.label :last_name, class:'col-md-4 control-label' %>
        <%= f.text_field :last_name, class:'col-md-4 input-md' %>
      </div>

      <div class='form-group'>
        <%= f.label :email, class:'col-md-4 control-label' %>
        <%= f.email_field :email, class:'col-md-4 input-md' %>
      </div>

      <div class='form-group'>
        <%= f.label :role, class:'col-md-4 control-label' %>
        <%= f.text_field :role, class:'col-md-4 input-md' %>
      </div>

      <div class='form-group'>
        <%= f.label :password, class:'col-md-4 control-label' %>
        <%= f.password_field :password, class:'col-md-4 input-md'%>
      </div>

      <div class='form-group'>
        <%= f.label :password_confirmation, class:'col-md-4 control-label' %>
        <%= f.password_field :password_confirmation, class:'col-md-4 input-md' %>
      </div>
      
      <div class='form-group'>
        <%= f.submit 'Create my account', class: 'btn btn-primary control-label' %>
      </div>
    <% end %>
	</div>
</div>